# Primavera P6 Library Directory
# Path to directory containing P6 integration JAR files
P6_LIB_DIR=/path/to/p6/lib

# Database Type
# Options: 'standalone' (SQLite) or 'enterprise' (Oracle)
P6_DB_TYPE=standalone

# Database Credentials (Required for enterprise mode only)
DB_USER=your_database_username
DB_PASS=your_database_password
DB_INSTANCE=your_database_instance

# P6 User Credentials
P6_USER=your_p6_username
P6_PASS=your_p6_password

# Safety Configuration
# SAFE_MODE: When true, prevents write operations to P6 (default: true)
SAFE_MODE=true

# Logging Configuration
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO
